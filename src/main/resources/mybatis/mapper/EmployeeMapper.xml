<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.LiteTravel.web.mapper.EmployeeMapper">
    <insert id="InsertEmployee">
        insert into sqlconnect.employee(lastName, email, gender, department_id, birth)
            value (#{lastName}, #{email}, #{gender}, #{departmentId}, #{birth})
    </insert>

    <select id="getEmployeeById" resultType="com.LiteTravel.web.po.Employee">
        select *
        from sqlconnect.employee
        where id = #{id}
    </select>

    <select id="getEmployees" resultType="com.LiteTravel.web.po.Employee">
        select *
        from sqlconnect.employee
    </select>

    <update id="updateEmployee">
        update sqlconnect.employee
        set lastName      = #{lastName},
            email         = #{email},
            gender        = #{gender},
            department_id = #{departmentId},
            birth         = #{birth}
        where id = #{id}
    </update>

    <delete id="deleteEmployee">
        delete
        from sqlconnect.employee
        where id = #{id}
    </delete>
</mapper>