<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.LiteTravel.web.mapper.HotelMapper">
    <select id="getHotels" resultType="Hotel">
        SELECT h.*, m.hotel_comment_count
        FROM travel_hotel h,
             (SELECT h.hotel_id, COUNT(1) hotel_comment_count
              FROM travel_hotel h
                       LEFT JOIN travel_hotel_manager hm
                                 ON h.hotel_manager_id = hm.hotel_manager_id
              GROUP BY h.hotel_id) m
        WHERE h.hotel_id = m.hotel_id
    </select>
    <select id="getHotelById" resultType="Hotel">
        SELECT * FROM travel_hotel WHERE hotel_id = #{hotelId}
    </select>
    <!-- todo 通过地址筛选酒店? 实际上这个筛选算法还需要更加精细 -->
    <select id="getHotelsByAddress" resultType="Hotel">
        SELECT * FROM travel_hotel WHERE hotel_address = #{hotelAddress}
    </select>
    <select id="getRelatedHotel" resultType="Hotel">
        SELECT * FROM travel_hotel WHERE hotel_id != #{hotelId}
    </select>
</mapper>