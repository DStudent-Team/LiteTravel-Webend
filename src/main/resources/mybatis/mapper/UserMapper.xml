<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travelplatform.web.mapper.UserMapper">
    <insert id="insertUser" parameterType="string">
        INSERT INTO travel_user_account(user_code, password, state)
        VALUES (#{userCode}, #{password}, '1')
    </insert>
    <select id="findUser" parameterType="string" resultType="user">
        SELECT *
        FROM travel_user_account
        WHERE user_code = #{userCode}
          AND password = #{password}
          AND state = '1'
    </select>
    <select id="findUserByCode" parameterType="string" resultType="user">
        SELECT *
        FROM travel_user_account
        WHERE user_code = #{userCode}
    </select>
    <select id="findUserById" resultType="User">
        SELECT *
        FROM travel_user_account
        WHERE user_id = #{userId}
    </select>
</mapper>